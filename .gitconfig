[user]
	name = Lasse Haugen
	email = haugen.lasse@gmail.com
[github]
	user = lasseh
[gist]
	private = yes
[core]
	pager = less
	editor = vim
	excludefile = ~./gitignore
[push]
	default = matching
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[web]
	browser = google-chrome
[alias]
	tags = tag -l
	branches = branch -a
	remotes = remote -v

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
	remote = origin
	merge = refs/heads/master

